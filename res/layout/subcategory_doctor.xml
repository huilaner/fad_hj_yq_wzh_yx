<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    
        <CheckBox
        android:id="@+id/doc_internal_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="Internal Medicine" />
        
            <CheckBox
        android:id="@+id/doc_family_practice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="Family Practice" />
            
                <CheckBox
        android:id="@+id/doc_ob_gyn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="Ob-Gyn" />
            
                    <CheckBox
        android:id="@+id/doc_pediatrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="Pediatrics" />
                    
                        <CheckBox
        android:id="@+id/doc_mental_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="Mental Health" />
                        
                            <CheckBox
        android:id="@+id/doc_other_specialist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="Other Specialist" />
   
    <CheckBox
        android:id="@+id/doc_immunology"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="Immunology" />

    <CheckBox
        android:id="@+id/doc_radiology"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="Radiology" />

    <CheckBox
        android:id="@+id/doc_cardiology"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="Cardiology" />

    <CheckBox
        android:id="@+id/doc_pediatric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="Pediatric" />

    <CheckBox
        android:id="@+id/doc_dental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="Dental Hygiene" />
    
        <Button
        android:id="@+id/doc_submit"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="submit" />
</LinearLayout>
    
</ScrollView>